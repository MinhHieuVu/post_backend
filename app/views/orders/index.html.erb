<div class="page-header">
  <div class="row align-items-center mb-3">
    <div class="col-sm mb-2 mb-sm-0">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-no-gutter">
          <!--          <li class="breadcrumb-item"><a class="breadcrumb-link" href="<%#= root_path %>"><%#= fa_icon("home") %></a></li>-->
          <li class="breadcrumb-item active" aria-current="page">Orders</li>
        </ol>
      </nav>

      <h1 class="page-header-title">Order <span class="badge badge-soft-dark ml-2"><%= Order.all.size %></span></h1>
    </div>
    <div class="col-sm-auto">
      <%= link_to "Add Restaurant", new_order_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div class="card">
  <div class="table-responsive">
    <table class="table table-borderless card-table">
      <thead class="thead-light">
      <tr>
        <th>ID</th>
        <th>Quantity</th>
        <th>Total_Price</th>
        <th>Customer</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.quantity %></td>
          <td><%= order.total_price %></td>
          <td><%= order.customer.name if order.customer.present? %></td>
          <td><%= link_to 'Show', order %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
